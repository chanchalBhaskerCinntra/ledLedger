<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size_55"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constarintBarChartHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bar_chart_holder_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/topHeadingGraph"
                    style="@style/textviewNormalHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Sales"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/linearMonthlySPinnerTop" />

                <LinearLayout
                    android:id="@+id/linearMonthlySPinnerTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@id/ivGraphshubh"
                    app:layout_constraintTop_toTopOf="parent">


                    <Spinner
                        android:id="@+id/date_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_border_edit"
                        android:backgroundTint="@color/green_spinner_date"

                        android:padding="-4dp"
                        android:spinnerMode="dropdown"

                        android:textColor="@color/white"
                        android:visibility="gone"


                        />


                </LinearLayout>

                <ImageView
                    android:id="@+id/ivGraphshubh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_barchart_white_dashboard"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinnerGraphYearSelection"
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:minWidth="@dimen/size_90"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/white"
                    android:visibility="gone"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:id="@+id/linearGraphRepresentator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_4"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tab_layout">

                    <!-- Third ImageView with white circle -->
                    <ImageView

                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/white_circle"
                        android:backgroundTint="@color/grey" />

                    <!-- Second TextView -->
                    <TextView
                        android:id="@+id/tvPreviousYearHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_2"
                        android:layout_marginEnd="@dimen/size_2"

                        android:textColor="@color/white" />

                    <!-- First ImageView with yellow circle -->
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:background="@drawable/yellow_circle"
                        android:backgroundTint="@color/white" />

                    <!-- First TextView -->
                    <TextView
                        android:id="@+id/tvCurrentYearHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_2"
                        android:layout_marginEnd="@dimen/size_2"

                        android:textColor="@color/white" />



                </LinearLayout>


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPagerChart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linearGraphRepresentator" />


                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:background="@color/bar_chart_holder_background"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/spinnerGraphYearSelection"
                    app:tabGravity="center"
                    app:tabIndicatorColor="@android:color/white"
                    app:tabIndicatorHeight="2dp"
                    app:tabMinWidth="0dp"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/white" />

                <!-- app:tabBackground="@drawable/tab_selector"-->

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/any_chart_view"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_200"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:background="@color/bar_chart_holder_background"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linearMonthlySPinnerTop" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
